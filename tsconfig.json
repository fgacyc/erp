{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"noUncheckedIndexedAccess": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},

	"include": [
		"**/*.ts",
		"**/*.tsx",
		"src/components/UI_Modal/UI_SearchModal/UI_SearchModal.j/tsx",
		"src/pages/Recruitment/InterviewPage/QuestionGroup.example"
	],
	"exclude": ["node_modules"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
